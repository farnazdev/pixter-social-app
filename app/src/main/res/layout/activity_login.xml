<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login3"
    tools:context=".controller.activities.LoginActivity">


    <RelativeLayout
        android:id="@+id/welcome_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/login_icon"
            android:layout_width="135dp"
            android:layout_height="120dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="6dp"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/welcome_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="21dp"
            android:layout_marginTop="28dp"
            android:layout_toEndOf="@+id/login_icon"
            android:padding="3dp"
            android:text="Welcome Back"
            android:textAlignment="center"
            android:textColor="@color/buttons"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/login_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/welcome_text"
            android:layout_marginStart="30dp"
            android:layout_marginTop="13dp"
            android:layout_toEndOf="@+id/login_icon"
            android:padding="3dp"
            android:text="Login To Your Account!"
            android:textAlignment="center"
            android:textColor="@color/textBase"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <EditText
        android:id="@+id/login_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcome_layout"
        android:layout_marginTop="77dp"
        android:background="@drawable/inputs"
        android:drawableLeft="@drawable/email"
        android:ems="10"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:hint="Phone Or Email..."
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:selectAllOnFocus="false"
        android:textColor="@color/textBase"
        android:textColorHint="@color/hintTextBase"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/login_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_email"
        android:layout_marginTop="10dp"
        android:background="@drawable/inputs"
        android:drawableLeft="@drawable/password"
        android:ems="10"
        android:hint="Password..."
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="@color/textBase"
        android:textColorHint="@color/hintTextBase"
        android:textSize="20sp" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_password"
        android:layout_marginTop="114dp"
        android:background="@drawable/buttons"
        android:fontFamily="sans-serif"
        android:padding="10dp"
        android:text="Login"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/register_account_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_button"
        android:layout_marginTop="10dp"
        android:padding="3dp"
        android:text="Don't Have An Account?"
        android:textAlignment="center"
        android:textColor="@color/textBase"
        android:textSize="18sp"
        android:textStyle="bold" />



